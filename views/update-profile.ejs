<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Profile - FinSage</title>
  <link rel="icon" href="/images/logo.png.png" type="image/png" />
  <link rel="stylesheet" href="/stylesheets/dashboard.css" />
  <link rel="stylesheet" href="/stylesheets/dashboardmedia.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    :root {
      --accent-color: #1F4E79;
      --text-color: #252424;
      --background-color: linear-gradient(90deg, #e2e2e2, #c9d6ff);
    }
    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      background: var(--background-color);
      color: var(--text-color);
      background-attachment: fixed;
      background-size: cover;
    }
    .dark-mode {
      --background-color: linear-gradient(90deg, #313b4d, #1e293b);
      --text-color: #e2e8f0;
      background: var(--background-color) !important;
      color: var(--text-color) !important;
    }
    .dark-mode .container {
      background-color: #38485f !important;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }
    .dark-mode label {
      color: var(--text-color);
    }
    .dark-mode h2.section-title {
      background-color: var(--accent-color) !important;
      color: #fff !important;
    }
    .dark-mode .btn-primary {
      background: linear-gradient(to right, #2563eb, #1d4ed8) !important;
      color: #fff;
      border: none;
    }
    .dark-mode .btn-primary:hover {
      background: linear-gradient(to right, #1e40af, #1e3a8a) !important;
    }
    .form-label {
      font-size: large;
      font-weight: 600;
    }
    .dark-mode input.form-control {
      background-color: #1e293b !important;
      color: #e2e8f0 !important;
      border: 1px solid #475569 !important;
    }
    .dark-mode input.form-control:focus {
      background-color: #1e293b !important;
      color: #ffffff !important;
      border-color: var(--accent-color) !important;
      outline: none !important;
      box-shadow: none !important;
    }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.6);
    }
    .modal-content {
      background-color: white;
      margin: 15% auto;
      padding: 20px;
      border-radius: 8px;
      width: 300px;
      text-align: center;
    }
    .close {
      float: right;
      font-size: 24px;
      cursor: pointer;
    }
  

    .modal-content {
  background-color: #f9f9f9;
  margin: 15% auto;
  padding: 20px;
  border-radius: 10px;
  width: 320px;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
  transition: all 0.3s ease-in-out;
}

/* Dark mode modal styles */
.dark-mode .modal-content {
  background-color: #1e293b; /* same as your form fields */
  color: #e2e8f0;
  border: 1px solid #475569;
}

.dark-mode .modal-content h4 {
  color: #e2e8f0;
}

.dark-mode .modal-content input.form-control {
  background-color: #334155;
  color: #f1f5f9;
  border: 1px solid #475569;
}

.dark-mode .modal-content input.form-control:focus {
  border-color: #1F4E79;
  outline: none;
  box-shadow: 0 0 0 0.2rem rgba(31, 78, 121, 0.25);
}

.dark-mode .modal-content .btn-primary {
  background: linear-gradient(to right, #2563eb, #1d4ed8);
  color: white;
  border: none;
}

.dark-mode .modal-content .btn-primary:hover {
  background: linear-gradient(to right, #1e40af, #1e3a8a);
}
.modal-content {
  animation: fadeInModal 0.3s ease-in-out;
}

@keyframes fadeInModal {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

    
  </style>
</head>

<body id="body" class="min-h-screen  ">
  <div class="container my-5 max-w-xl mx-auto p-4 bg-white rounded-2xl shadow-md">
    
    <div class="text-center mb-4">
      <h2 class="text-2xl font-semibold text-white bg-[#1F4E79] section-title rounded-t-2xl">Edit Your Profile</h2>
    </div>

    <% if (typeof message !== 'undefined') { %>
      <div class="alert alert-info text-center"><%= message %></div>
    <% } %>

    <!-- Actual Edit Profile Form -->
    <form id="profileForm" action="/<%= user.userId %>/profile/update?_method=PUT" method="POST" class="space-y-4">
      <input type="hidden" name="userId" value="<%= user.userId %>" />

      <div>
        <label for="name" class="form-label">Full Name</label>
        <input type="text" name="name" id="name" class="form-control" value="<%= user.name %>" required>
      </div>

      <div>
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= user.email %>" required>
      </div>

      <div class="text-center mt-4">
        <button type="button" onclick="openPasswordModal()" class="btn btn-primary px-4 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-blue-500 text-white hover:from-blue-700 hover:to-blue-600 shadow-sm">
          Save Changes
        </button>
      </div>
    </form>

    <div class="mt-4 text-center">
      <a href="/<%= user.userId %>/dashboard" class="inline-block px-4 py-2 text-white bg-gray-700 rounded-lg hover:bg-gray-800 text-sm">Cancel</a>
    </div>
  </div>

  <!-- Password Modal -->
  <div id="passwordModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closePasswordModal()">&times;</span>
      <h4 class="mb-3">Enter your password to confirm</h4>
      <form id="passwordCheckForm" onsubmit="submitWithPassword(event)">
        <input type="password" id="confirmPassword" class="form-control mb-3" placeholder="Enter your password" required>
        <button type="submit" class="btn btn-primary w-100">Confirm</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'dark') {
      document.getElementById('body').classList.add('dark-mode');
    }

    function openPasswordModal() {
      document.getElementById("passwordModal").style.display = "block";
    }

    function closePasswordModal() {
      document.getElementById("passwordModal").style.display = "none";
    }

    window.onclick = function(event) {
      const modal = document.getElementById("passwordModal");
      if (event.target === modal) {
        closePasswordModal();
      }
    }

    function submitWithPassword(event) {
      event.preventDefault();
      const password = document.getElementById("confirmPassword").value;

      // Create a hidden input and append to the original form
      const form = document.getElementById("profileForm");
      const hidden = document.createElement("input");
      hidden.type = "hidden";
      hidden.name = "password";
      hidden.value = password;
      form.appendChild(hidden);

      form.submit(); // Submit form with password
    }
  </script>
</body>
</html>
