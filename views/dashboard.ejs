<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FinSage Dashboard</title>
  <link rel="icon" type="image/png" href="/images/logo.png.png">

  <link rel="stylesheet" href="/stylesheets/dashboard.css">
  <link rel="stylesheet" href="/stylesheets/dashboardmedia.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />
</head>

<body id="body">
  <div class="d-flex">
    
    <!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
  <div class="flash-message-container">
    <div class="flash-message success"><%= success_msg[0] %></div>
  </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
  <div class="flash-message-container">
    <div class="flash-message error"><%= error_msg[0] %></div>
  </div>
<% } %>

<div class="flash-message-container" id="flashMessageJs" style="display: none; ">
  <span class="flash-message success" id="flashMessageText">Coming soon...</span>
</div>



    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
      <!-- Top Bar -->
      <div class="Logo-Strip d-flex flex-wrap justify-content-between align-items-center mb-4 position-relative">
        <h6 class="d-flex align-items-center gap-2">
        <img src="/images/logo.png.png" alt="logo" style="height: 32px; width: 32px; object-fit: contain;">
        FinSage
      </h6>

        <span class="greeting">Hello, <%= user.name %> ðŸ‘‹</span>
        <div class="d-flex align-items-center gap-3">


                <form id="monthForm" method="GET" action="" class="d-flex align-items-center gap-2">
                <input
                    type="month"
                    name="month"
                    class="form-control form-control-sm"
                    style="width: auto;"
                    value="<%= selectedMonth %>"
                    placeholder="mm - yyyy"
                    id="monthInput"
                />
                <button type="submit" hidden></button>
                </form>
                    

          <button class="btn btn-light btn-sm" aria-label="Toggle Theme" id="theme-toggle"><i class="bi bi-moon"></i></button>
          <a href="/<%= user.userId %>/notifications" class="position-relative text-decoration-none ">
              <i class="bi bi-bell fs-5">
                <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
              </i>
            </a>
          <div class="position-relative">
            <i class="bi bi-person-circle fs-5" id="profile-icon" style="cursor: pointer;"></i>
            <div class="profile-dropdown" id="profile-dropdown">
              <a href="/<%= user.userId %>/profile">Profile</a>
              <!-- <a href="#">Settings</a> -->
              <a href="/user/logout">Logout</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Summary Cards -->
      <div class="row g-4 mb-4">
        <div class="col-md-6">
          <div class="card card-income shadow-sm p-3">
            <h6>Total Income</h6>
            <h4>&#8377; <%= income || 0 %></h4>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card card-expense shadow-sm p-3">
            <h6>Total Expenses</h6>
            <h4>&#8377; <%= expense || 0 %></h4>
          </div>
        </div>
      </div>

            <!-- Recent Transactions -->
  <div class="card">
  <div class="card-body">
    <h5 class="card-title">Recent Transactions</h5>
    <ul class="list-group">
      <% transaction.forEach(txn => { %>
        <li class=" transaction-item list-group-item d-flex justify-content-between align-items-center ">
                <div>
                    <div><strong><%= txn.title %></strong></div>
                    <small ><%= txn.date.toDateString() %></small>
                </div>
                <span class="<%= txn.type === 'income' ? 'text-success' : 'text-danger' %>">
                    â‚¹<%= txn.amount %>
                </span>
                </li>

      <% }) %>
    </ul>
            <div class="text-end mt-2">
<a href="/<%= user.userId %>/transaction/all?month=<%= selectedMonth %>" class="btn btn-outline-primary btn-sm" style="background-color: #1F4E79 ; color: #FFFFFF">See More</a>
            </div>
      </div>
      </div>
      
      <!-- Charts Section -->
      <div class="card">
      <div class="row g-4 mb-4">
        <div class="col-md-6">
          <div class="card p-3 shadow-sm">
            <h6>Spending Categories</h6>
            <div class="chart-container">
              <canvas id="pieChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card p-3 shadow-sm">
            <h6>Income vs Expenses</h6>
            <div class="chart-container">
              <canvas id="barChart"></canvas>
            </div>
          </div>
        </div>
      </div>

     </div>

<!-- Goal Tracker Section -->
<div class="row g-4 mb-4">
  <div class="col-md-6">
    <div class="card shadow-sm p-3">
      <h6>Savings Goal</h6>
      <ul class="list-group">

        <% if (goals && goals.length > 0) { %>
          <% goals.forEach(goal => { 
              const progress = Math.min(Math.round((goal.currentAmount / goal.targetAmount) * 100), 100);
          %>
            <li class=" goal-item list-group-item align-items-center">
              <p><strong><%= goal.goalName %></strong></p>
              <p class="mb-1 text-muted small"><%= goal.description %></p>
              <div class="progress mb-3" style="height: 20px;">
     <div class="progress-bar bg-success" role="progressbar" style="width: <%= progress %>% ">
                  <%= progress %>%
                </div>
              </div>
              <div class="d-flex gap-2">
                <form action="/<%= user.userId %>/goal/<%= goal._id %>/details">
                <button class="btn btn-info text-white" type="submit" style="background-color: #1F4E79;">Details</button>
             </form>
                </div>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item text-muted">No goals set yet.</li>
        <% } %>

      </ul>
    </div>
  </div>
</div>

      <!-- Recurring Bills & Budget Calendar -->
      <div class="row g-4 mb-4">
        <div class="col-md-6">
          <div class="card shadow-sm p-3">
            <h6>Recurring Bills</h6>
            <ul class="list-group">
             <% if (bills && bills.length > 0) { %>
                        <% bills.forEach(bill => { %>

              <li class="  list-group-item d-flex justify-content-between align-items-center goal-item ">
                <%= bill.billName %> <span class="text-danger">â‚¹<%= bill.amount %></span>
              <% }) %>
        <% } else { %>
          <li class="list-group-item text-muted">No bills set yet.</li>
        <% } %>
            </ul>
             <div class="text-end mt-2">
            <a href="/<%=user.userId%>/bill/all" class="btn btn-outline-primary btn-sm"  style="background-color: #1F4E79 ; color: #FFFFFF">See Details</a>
            </div>

          </div>
        </div>

      <!-- Bottom Navigation Bar -->
      <div class="  bottom-nav d-flex justify-content-around  shadow-sm p-2 rounded position-sticky bottom-0 z-3" >

        <a href="/<%=user.userId%>/dashboard" class="text-decoration-none  text-center"><i class="bi bi-house fs-5"></i><br><small>Home</small></a>
        <a href="#" id="openAddModal" class="text-decoration-none text-center"><i class="bi bi-plus-circle fs-4"></i><br><small>Add</small></a>
       <a href="/<%=user.userId%>/dashboard" id="aiBotBtn" class="text-decoration-none  text-center"><i class="bi bi-robot fs-5"></i><br><small>AIBot</small></a> 
      </div>

  


    
  </div>

  <!-- Add Modal -->
<div id="addModal" class="modal-overlay d-none">
  <div class="modal-box card shadow-lg">
    <h5 class="mb-4 text-center">What would you like to add?</h5>
    <div class="d-flex flex-column gap-3">
      <a href="/<%=user.userId%>/transaction" class="btn btn-primary"> Add Transaction</a>
      <a href="/<%=user.userId%>/goal" class="btn btn-success"> Add Goal</a>
      <a href="/<%=user.userId%>/bill" class="btn btn-warning text-white"> Add Bill Reminder</a>
    </div>
    <button class="btn btn-secondary mt-4 w-100" id="closeAddModal">Cancel</button>
  </div>
</div>


<!--  Chart.js CDN-->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js"></script>

<script>
    // Pie Chart
  const pieCtx = document.getElementById('pieChart').getContext('2d');
  new Chart(pieCtx, {
    type: 'pie',
    data: {
      labels: <%- JSON.stringify(categoryChartData.labels) %>,
      datasets: [{
        data: <%- JSON.stringify(categoryChartData.data) %>,
        backgroundColor: [
          "#f87171", // red
          "#60a5fa", // blue
          "#34d399", // green
          "#fbbf24", // yellow
          "#c084fc", // purple
          "#a8a29e", // gray
          "#fb923c"  // orange
        ]
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false
    }
  });

  // Bar Chart
  const barCtx = document.getElementById('barChart').getContext('2d');
  new Chart(barCtx, {
    type: 'bar',
    data: {
      labels: <%- JSON.stringify(barChartData.labels) %>,
      datasets: [
        {
          label: 'Income',
          backgroundColor: '#4CAF50',
          data: <%- JSON.stringify(barChartData.incomeData) %>
        },
        {
          label: 'Expenses',
          backgroundColor: '#FF6B6B',
          data:  <%- JSON.stringify(barChartData.expenseData) %>
        }
      ]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false
    }
  });
  </script>

<script src="/javascripts/dashboard.js"></script>

</body>

</html>
