<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Transaction - FinSage</title>
  <link rel="icon" href="/images/logo.png.png" type="image/png">
  <link rel="stylesheet" href="/stylesheets/dashboard.css">
  <link rel="stylesheet" href="/stylesheets/dashboardmedia.css">
  <link rel="stylesheet" href="/stylesheets/add-transaction.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body id="body" class="min-h-screen  ">
  <div class="container my-5 max-w-xl mx-auto p-4 bg-white rounded-2xl shadow-md">
    <div class="text-center mb-4">
      <h2 class="text-2xl font-semibold text-[#FFFFFF] bg-[#1F4E79] section-title rounded-t-2xl">Add New Transaction</h2>
    </div>

    


    <form action="/<%=userId%>/transaction/add" method="POST" class="space-y-4">
      <div>
        <label for="amount" class="form-label">Amount</label>
        <input type="number" name="amount" id="amount" class="form-control" placeholder="Add amount" inputmode="decimal" step="0.01" required>
      </div>

      <div>
        <label for="type" class="form-label">Type</label>
        <select name="type" id="type" class="form-select" required>
          <option value="Income">Income</option>
          <option value="Expense">Expense</option>
          <option value="Savings">Savings</option>
        </select>
      </div>

      <div>
        <label for="category" class="form-label">Category</label>
        <!-- <select name="category" id="category" class="form-select" required>
          <option value="Food">Food</option>
          <option value="Travel">Travel</option>
          <option value="Shopping">Shopping</option>
          <option value="Bills">Bills</option>
          <option value="Entertainment">Entertainment</option>
           <option value="Savings">Savings</option>
          <option value="Others">Others</option>
        </select> -->
        <input   name="category" id="category" class=" form-control" required>
      </div>

      <div>
        <label for="date" class="form-label">Date</label>
        <input type="date" name="date" id="date" class="form-control" required>
      </div>

      <div>
        <label for="note" class="form-label">Note</label>
        <textarea name="note" id="note" rows="3" class="form-control" placeholder="Optional"></textarea>
      </div>

      <div class="form-check">
        <input type="checkbox" name="recurring" value="true" class="form-check-input" id="recurring">
        <label for="recurring" class="form-check-label">Is this a recurring transaction?</label>
      </div>
        
        <input type="hidden" name="goalId" id="goalId" />

      <div class="text-center">
        <button type="submit" class="btn btn-primary px-4 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-blue-500 text-white hover:from-blue-700 hover:to-blue-600 shadow-sm">Add Transaction</button>
      </div>
    </form>

    <div class="mt-4 text-center">
      <a href="/<%=userId%>/dashboard" class="inline-block px-4 py-2 text-white bg-gray-700 rounded-lg hover:bg-gray-800 text-sm">Back to Dashboard</a>
    </div>
  </div>
        
            <!-- Goal Selection Modal -->
        <div class="modal fade" id="goalModal" tabindex="-1" aria-labelledby="goalModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content ">
              <div class="modal-header">
                <h5 class="modal-title" id="goalModalLabel">Select Goal for Savings</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <% if (goals.length > 0) { %>
                  <div class="list-group">
                    <% goals.forEach(goal => { %>
                      <button type="button" class="list-group-item list-group-item-action goal-option"
                        data-goal-id="<%= goal._id %>">
                        <%= goal.goalName %> — ₹<%= goal.currentAmount %> / ₹<%= goal.targetAmount %>
                      </button>
                    <% }); %>
                  </div>
                <% } else { %>
                  <p>No active goals found.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Load Bootstrap JS bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
   
        const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'dark') {
      body.classList.add('dark-mode');
    }

    const form = document.querySelector('form');
  const typeSelect = document.getElementById('type');
  const goalModal = new bootstrap.Modal(document.getElementById('goalModal'));
  const goalIdInput = document.getElementById('goalId');

  form.addEventListener('submit', function (e) {
    if (typeSelect.value === 'Savings' && !goalIdInput.value) {
      e.preventDefault(); // Prevent submission for now
      goalModal.show();
    }
  });

  // When a goal is selected
  document.querySelectorAll('.goal-option').forEach(btn => {
    btn.addEventListener('click', () => {
      const selectedGoalId = btn.getAttribute('data-goal-id');
      goalIdInput.value = selectedGoalId;
      goalModal.hide();
      form.submit(); // Submit now
    });
  });


  </script>
</body>
</html>
